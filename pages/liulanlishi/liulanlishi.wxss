/* pages/history/history.wxss */
.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.clear-btn {
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 8rpx 30rpx;
}

.history-list {
  height: calc(100vh - 120rpx);
}

.history-item {
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  color: rgb(39, 39, 39);
}
.item-desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-price {
  color: #e4393c;
  font-size: 34rpx;
  font-weight: bold;
}

.item-time {
  color: #999;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-img {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}
