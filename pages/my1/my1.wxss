/* pages/my1/my.wxss */


.my-container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding: 20rpx;
}

.user-section {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 0;
}

.order-section,
.function-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.order-types {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.order-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.function-grid {
  display: flex;
  flex-wrap: wrap;
}

.function-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}
.action-buttons {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.login-btn {
  background: #4a6bdf;
  color: white;
  width: 80%;
  margin: 5rpx auto;
}


.function-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

